<main id="login">
  <div class="login-bg"></div>
  <form class="container-lg p-5 border border-dark" method="POST" action="/login">
  
    <div class="mb-3">
      <label for="username" class="form-label">Username: </label>
      <input type="text" class="form-control" id="username" name="username" />
      <span class="errorFdbk" id="usernameFdbk"></span>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password: </label>
      <input type="password" class="form-control" id="password" name="password" />
      <span id="pwdFdbk"></span>
    </div>
      <button type="submit" class="errorFdbk btn btn-primary" id="submit">Log In</button>
  </form>
</main>

